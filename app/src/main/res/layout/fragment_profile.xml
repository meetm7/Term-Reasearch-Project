<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_faces_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/tv_post"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="Posts" />

                    <TextView
                        android:id="@+id/tv_friends"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="Friends" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:text="BBM123" />

                    <TextView
                        android:id="@+id/tv_postVal"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="122" />

                    <TextView
                        android:id="@+id/tv_friendsVal"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="212" />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/tv_bio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="bio" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_retrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrive info" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:listitem="@layout/profile_recycler_row">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>